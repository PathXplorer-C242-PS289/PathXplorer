<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.PathXplorer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.PathXplorer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue_700_18</item>
    </style>

    <style name="BlueAnchor">
        <item name="android:textColor">@color/blue_700</item>
    </style>

    <style name="BlueAnchor.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlueAnchor.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>